<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Beheer.AccountBeheerEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Beheer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Account Bewerken"
                       Foreground="#FDD716"
                       FontSize="40"
                       FontFamily="Segoe UI"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                <Button x:Name="Back"
                        Content="Terug"
                        Click="Back_Click"
                        Background="Black"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Padding="12,6"
                        BorderBrush="White"
                        BorderThickness="1"/>

                <Button x:Name="Logout"
                        Content="Uitloggen"
                        Click="Logout_Click"
                        Background="#FDD716"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="12,6"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="600"
                    Spacing="20">

            <TextBox x:Name="NameTextBox"
                     Width="400"
                     Height="40"
                     PlaceholderText="Naam"
                     FontSize="16"
                     BorderBrush="Black"
                     BorderThickness="1"
                     Background="White"
                     Foreground="Black"
                     Padding="8"/>

           
            <TextBox x:Name="EmailTextBox"
                     Width="400"
                     Height="40"
                     PlaceholderText="E-mailadres"
                     FontSize="16"
                     BorderBrush="Black"
                     BorderThickness="1"
                     Background="White"
                     Foreground="Black"
                     Padding="8"/>

            <PasswordBox x:Name="PasswordTextBox"
                         PlaceholderText="Nieuwe Wachtwoord (Optioneel)"
                         Width="400"
                         Height="40"
                         FontSize="16"
                         BorderBrush="Black"
                         BorderThickness="1"
                         Background="White"
                         Foreground="Black"
                         Padding="8"/>

            <DropDownButton x:Name="RoleDropDownButton" Content="Role"
                            HorizontalAlignment="Center">
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Beheer" Click="MenuFlyoutItem_Click" />
                        <MenuFlyoutItem Text="Sales" Click="MenuFlyoutItem_Click" />
                        <MenuFlyoutItem Text="Inkoop" Click="MenuFlyoutItem_Click" />
                        <MenuFlyoutItem Text="Monteur" Click="MenuFlyoutItem_Click" />
                        <MenuFlyoutItem Text="FinanciÃ«n" Click="MenuFlyoutItem_Click" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>

            <Button x:Name="SaveChange"
                    Content="Wijzigingen Opslaan"
                    Click="SaveChange_Click"
                    Width="200"
                    Height="45"
                    Background="#FDD716"
                    Foreground="Black"
                    FontSize="16"
                    FontWeight="Bold"
                    BorderThickness="0"
                    HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</Page>

<Page
    x:Class="BarrocIntens.Pages.Beheer.AccountBeheerOverViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Beheer"
    xmlns:localData="using:BarrocIntens.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="30,0,0,0">
                <TextBlock Text="Account Overview"
                           Foreground="#FDD716"
                           FontSize="40"
                           FontFamily="Segoe UI"
                           FontWeight="Bold"/>

                <TextBox x:Name="userSearchTextBox"
                         Header="Search:"
                         Width="500"
                         PlaceholderText="Zoeken:" 
                         TextChanged="UserSearchTextBox_TextChanged"
                         Background="White"
                         Foreground="Black"
                         />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                <Button x:Name="Back"
                        Content="Terug"
                        Click="Back_Click"
                        Background="Black"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderBrush="White"
                        BorderThickness="1"
                        Padding="12,6"/>

                <Button x:Name="AccountCreate"
                        Content="Account Aanmaken"
                        Click="AccountCreate_Click"
                        Background="Black"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderBrush="White"
                        BorderThickness="1"
                        Padding="12,6"/>

                <Button x:Name="Logout"
                        Content="Uitloggen"
                        Click="Logout_Click"
                        Background="#FDD716"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="12,6"/>
            </StackPanel>
        </Grid>

        <ListView x:Name="AccountListView"
                  Grid.Row="1"
                  Margin="30,20,30,20"
                  IsItemClickEnabled="True"
                  ItemClick="AccountListView_ItemClick"
                  SelectionMode="None"
                  Background="White"
                  BorderThickness="0"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="localData:User">
                    <Border BorderThickness="1"
                            BorderBrush="#CCCCCC"
                            Background="White"
                            CornerRadius="4"
                            Padding="10"
                            Margin="0,8,0,0">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{x:Bind Username}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="Black"/>

                                                    <TextBlock Text="{x:Bind Email}"
                                           FontSize="14"
                                           Foreground="Gray"
                                           Margin="0,2,0,0"/>

                                                <TextBlock Text="{x:Bind Role}"
                                           FontSize="14"
                                           Foreground="#FDD716"
                                           FontWeight="SemiBold"
                                           Margin="0,4,0,0"/>   
                            </StackPanel>

                            <Button x:Name="DeleteButton"
                                            Grid.Column="1"
                                            Content="Verwijderen"
                                            Background="#FDD716"
                                            Foreground="Black"
                                            FontWeight="SemiBold"
                                            Margin="10,0,0,0"
                                            Padding="12,6"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Click="DeleteButton_Click"/>        
                        </Grid>
                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

<Page
    x:Class="BarrocIntens.Pages.Beheer.AccountBeheerOverViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Beheer"
    xmlns:localData="using:BarrocIntens.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Account Overview"
                       Foreground="#FDD716"
                       FontSize="40"
                       FontFamily="Segoe UI"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                <Button x:Name="Back"
                        Content="Terug"
                        Click="Back_Click"
                        Background="Black"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Padding="12,6"
                        BorderBrush="White"
                        BorderThickness="1"/>

                <Button x:Name="Logout"
                        Content="Uitloggen"
                        Click="Logout_Click"
                        Background="#FDD716"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="12,6"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <ListView x:Name="AccountListView"
                  Grid.Row="1"
                  Margin="30,20,30,20"
                  IsItemClickEnabled="True"
                  ItemClick="AccountListView_ItemClick"
                  SelectionMode="None"
                  Background="White"
                  BorderThickness="0"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="localData:User">
                    <Border BorderThickness="1"
                            BorderBrush="Black"
                            Background="White"
                            CornerRadius="4"
                            Padding="10"
                            Margin="0,8,0,0">
                        <StackPanel>
                            <TextBlock Text="{x:Bind Username}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                            <TextBlock Text="{x:Bind Email}"
                                       FontSize="14"
                                       Foreground="Gray"
                                       Margin="0,2,0,0"/>
                            <TextBlock Text="{x:Bind Role}"
                                       FontSize="14"
                                       Foreground="#FDD716"
                                       FontWeight="SemiBold"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
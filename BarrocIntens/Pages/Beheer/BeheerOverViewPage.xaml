<Page
    x:Class="BarrocIntens.Pages.Beheer.BeheerOverViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Beheer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Black" Height="90">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Beheer Overzicht"
                       Foreground="#FDD716"
                       FontSize="36"
                       FontFamily="Segoe UI Black"
                       VerticalAlignment="Center"
                       Margin="40,0,0,0"/>

            <Button x:Name="Logout"
                    Content="Uitloggen"
                    Click="Logout_Click"
                    Grid.Column="1"
                    Background="#FDD716"
                    Foreground="Black"
                    FontSize="16"
                    FontWeight="Bold"
                    Padding="10,6"
                    CornerRadius="6"
                    BorderThickness="0"
                    Margin="0,0,40,0"
                    Width="130"/>
        </Grid>

        <Grid Grid.Row="1" Background="#FFFDFDFD">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="30">

                <TextBlock Text="Kies een Afdeling"
                           FontSize="24"
                           FontFamily="Segoe UI Semibold"
                           Foreground="Black"
                           HorizontalAlignment="Center"/>

                <Grid ColumnSpacing="20" RowSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    
                    <Button x:Name="SalesOverView_Button"
                            Content="Sales"
                            Click="SalesOverView_Button_Click"
                            Grid.Column="0" 
                            Background="#FDD716"
                            Foreground="Black"
                            FontWeight="Bold"
                            FontSize="16"
                            Width="200" Height="60"
                            CornerRadius="8"
                            BorderThickness="0"/>
                    <Button x:Name="FinancienOverView_Button"
                            Content="FinanciÃ«n"
                            Click="FinancienOverView_Button_Click"
                            Grid.Column="1"
                            Background="#FDD716"
                            Foreground="Black"
                            FontWeight="Bold"
                            FontSize="16"
                            Width="200" Height="60"
                            CornerRadius="8"
                            BorderThickness="0"/>

                    <Button x:Name="MonteurOverView_Button"
                            Content="Monteur"
                            Click="MonteurOverView_Button_Click"
                            Grid.Column="2"
                            Background="#FDD716"
                            Foreground="Black"
                            FontWeight="Bold"
                            FontSize="16"
                            Width="200" Height="60"
                            CornerRadius="8"
                            BorderThickness="0"/>
                    <Button x:Name="InkoopOverView_Button"
                            Content="Inkoop"
                            Click="InkoopOverView_Button_Click"
                            Grid.Column="3"
                            Background="#FDD716"
                            Foreground="Black"
                            FontWeight="Bold"
                            FontSize="16"
                            Width="200" Height="60"
                            CornerRadius="8"
                            BorderThickness="0"/>
                </Grid>


                
                <Button x:Name="AccountBeheerOverView_Button"
                        Margin="0,20,0,0"
                            Content="Accountbeheer"
                            HorizontalAlignment="Center"
                            Click="AccountBeheerOverView_Button_Click"
                            Grid.Column="0" Grid.Row="0"
                            Background="#FDD716"
                            Foreground="Black"
                            FontWeight="Bold"
                            FontSize="16"
                            Width="200" Height="60"
                            CornerRadius="8"
                            BorderThickness="0"/>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
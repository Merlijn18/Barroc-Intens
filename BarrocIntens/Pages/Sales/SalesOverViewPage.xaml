<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Sales.SalesOverViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:BarrocIntens.Models"
    xmlns:local="using:BarrocIntens.Pages.Sales"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <local:CurrencyConverter x:Key="CurrencyConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ======= HEADER ======= -->
        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Sales Pagina"
                       Foreground="#FDD716"
                       FontSize="40"
                       FontFamily="Segoe UI"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                <Button x:Name="Back"
                        Content="Terug"
                        Click="Back_Click"
                        Background="Black"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Padding="12,6"
                        BorderBrush="White"
                        BorderThickness="1"/>

                <Button x:Name="Logout"
                        Content="Uitloggen"
                        Click="Logout_Click"
                        Background="#FDD716"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="12,6"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- ======= MAIN CONTENT ======= -->
        <Grid Grid.Row="1" Margin="30,20,30,30">
            <StackPanel>
                <TextBlock Text="Lopende Offertes"
                           FontSize="28"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <Button Content="Nieuwe Offerte Aanmaken"
                        x:Name="CreateOfferButton"
                        Click="CreateOffer_Click"
                        Background="#FDD716"
                        Foreground="Black"
                        FontWeight="Bold"
                        Padding="10,6"
                        Width="250"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20" Spacing="10">
                    <Button Content="Concepten" 
                            Click="FilterConcept_Click"
                            Background="#FDD716"
                            Foreground="Black"
                            FontWeight="Bold"
                            Padding="10,6"
                            Width="250"/>
                    <Button Content="Verstuurd" 
                            Click="FilterVerstuurd_Click"
                            Background="#FDD716"
                            Foreground="Black"
                            FontWeight="Bold"
                            Padding="10,6"
                            Width="250"/>
                    <Button Content="Alles"
                            Click="FilterAll_Click"
                            Background="#FDD716"
                            Foreground="Black"
                            FontWeight="Bold"
                            Padding="10,6"
                            Width="250"/>

                </StackPanel>

                <!-- Offerte overzicht -->
                <ListView x:Name="OfferListView"
                          ItemClick="OfferListView_ItemClick"
                          IsItemClickEnabled="True"
                          BorderBrush="#DDD"
                          BorderThickness="1"
                          CornerRadius="5"
                          Height="500">
                    <ListView.Header>
                        <StackPanel Orientation="Horizontal" Spacing="20" Margin="10,0,0,0">
                            <TextBlock Text="Offertenummer" Width="130" FontWeight="Bold"/>
                            <TextBlock Text="Klantnaam" Width="200" FontWeight="Bold"/>
                        </StackPanel>
                    </ListView.Header>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Offer">
                            <StackPanel Orientation="Horizontal" Spacing="20" Margin="10,5,0,5">
                                <TextBlock Text="{x:Bind OfferNumber}" Width="130"/>
                                <TextBlock Text="{x:Bind Customer.Name}" Width="200"/>
                                <Button Content="Bewerken"
                                        Tag="{x:Bind}"
                                        Click="EditOffer_Click"
                                        Background="#FDD716"
                                        Foreground="Black"
                                        FontWeight="Bold"
                                        Padding="6,2"
                                        Width="100"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Inlog.InlogOverViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Inlog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Black" Height="100">
            <TextBlock Text="BARROC INTENS"
                       Foreground="#FDD716"
                       FontSize="42"
                       FontFamily="Segoe UI Black"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>
        </Grid>

        <Grid Grid.Row="1" Background="White">
            <StackPanel x:Name="InlogPanel"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="25"
                        Width="400"
                        Margin="0,20,0,0">

                <TextBlock Text="Inloggen"
                           FontFamily="Segoe UI Semibold"
                           FontSize="36"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <TextBlock Text="Voer uw gegevens in om verder te gaan"
                           FontFamily="Segoe UI"
                           FontSize="16"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBox x:Name="NameEmailTextBox"
                         Height="48"
                         PlaceholderText="Naam of e-mailadres"
                         FontSize="16"
                         BorderBrush="Black"
                         BorderThickness="1"
                         Background="White"
                         Foreground="Black"
                         Padding="10"
                         HorizontalAlignment="Stretch"/>

                <PasswordBox x:Name="PasswordTextBox"
                             Height="48"
                             PlaceholderText="Wachtwoord"
                             FontSize="16"
                             BorderBrush="Black"
                             BorderThickness="1"
                             Background="White"
                             Foreground="Black"
                             Padding="10"
                             HorizontalAlignment="Stretch"/>

                <Button x:Name="InlogButton"
                        Content="INLOGGEN"
                        Click="InlogButton_Click"
                        Height="50"
                        Background="#FDD716"
                        Foreground="Black"
                        FontSize="18"
                        FontWeight="Bold"
                        BorderThickness="0"
                        CornerRadius="6"
                        HorizontalAlignment="Stretch">
                </Button>

                <TextBlock x:Name="MessageText"
                           Foreground="Red"
                           FontWeight="Bold"
                           FontSize="14"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
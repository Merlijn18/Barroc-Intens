<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Inkoop.LeverancierBeheer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Inkoop"
    xmlns:localData="using:BarrocIntens.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Inkoop"
                       Foreground="#FDD716"
                       FontSize="40"
                       FontFamily="Segoe UI"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Spacing="10">
                <Button x:Name="Back"
                        Content="Terug"
                        Click="Back_Click"
                        Background="Black"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Padding="12,6"
                        BorderBrush="White"
                        BorderThickness="1"/>
                <Button x:Name="Logout"
                        Content="Uitloggen"
                        Click="Logout_Click"
                        Background="#FDD716"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="12,6"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Padding="24" Margin="8,16,8,16">
            
            
            <Grid Background="#F3F4F6" Padding="18" CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        x:Name="LeverancierAanmaken"
                        Content="Leverancier aanmaken"
                        Click="LeverancierAanmaken_Click"
                        Margin="0,0,0,16"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>



                    <Border Grid.Column="0"
                        Margin="10"
                        Padding="20"
                        Background="White"
                        CornerRadius="10"
                        BorderBrush="#D0D0D0"
                        BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Leveranciers"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#222"/>

                            <ListView x:Name="LeverancierListView">
                                
                                
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="localData:Leverancier">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid Background="#F7F7F7"
                                                  CornerRadius="10"
                                                  Padding="16"
                                                  BorderThickness="1"
                                                  BorderBrush="#E0E0E0"
                      >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{x:Bind Leveranciernaam}"
                                                           Grid.Column="0"
                                                           FontWeight="SemiBold"
                                                           FontSize="16"/>          

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Contact" Foreground="Gray" FontSize="12"/>
                                                    <TextBlock Text="{x:Bind Contactpersoon}" FontSize="14"/>
                                                </StackPanel>

                                                <!-- Telefoon -->
                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="Telefoon" Foreground="Gray" FontSize="12"/>
                                                    <TextBlock Text="{x:Bind Telefoonnummer}" FontSize="14"/>
                                                </StackPanel>

                                                <!-- Email -->
                                                <StackPanel Grid.Column="3">
                                                    <TextBlock Text="Email" Foreground="Gray" FontSize="12"/>
                                                    <TextBlock Text="{x:Bind Email}" FontSize="14"/>
                                                </StackPanel>

                                                <!-- Adres -->
                                                <StackPanel Grid.Column="4">
                                                    <TextBlock Text="Adres" Foreground="Gray" FontSize="12"/>
                                                    <TextBlock Text="{x:Bind Adres}" FontSize="14"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </StackPanel>

                    </Border>

                    <Border Grid.Column="1"
                        Margin="10"
                        Padding="20"
                        Background="White"
                        CornerRadius="10"
                        BorderBrush="#D0D0D0"
                        BorderThickness="1">
                        <StackPanel>
                            <TextBlock x:Name="BestellingMelding"
                                       Visibility="Collapsed"
                                       Foreground="White"
                                       Padding="10"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Goederenontvangst"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#222"/>
                            <TextBlock Text="Registreer ontvangst: aantallen, condities en opmerkingen."
                                   Margin="0,8,0,0"
                                   Foreground="#555"
                                   TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2"
                        Margin="10"
                        Padding="20"
                        Background="White"
                        CornerRadius="10"
                        BorderBrush="#D0D0D0"
                        BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Dashboard meldingen"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#222"/>
                            <TextBlock Text="Overzicht van openstaande bestellingen en waarschuwingen."
                                   Margin="0,8,0,0"
                                   Foreground="#555"
                                   TextWrapping="Wrap"/>
                            <ListView x:Name="NotificationListView">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="localData:Bestelling">
                                        <StackPanel Margin="5" Padding="5" Background="#f0f0f0" CornerRadius="5">
                                            <TextBlock Text="{x:Bind Productname}" FontWeight="Bold"/>
                                            <TextBlock Text="{x:Bind Suppliername}"/>
                                            <TextBlock Text="Aantal: {x:Bind OrderQuantity}"/>
                                            <TextBlock Text="Status: {x:Bind Status}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </StackPanel>
                        
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>

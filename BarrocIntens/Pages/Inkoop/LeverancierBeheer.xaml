<Page
    x:Class="BarrocIntens.Pages.Inkoop.LeverancierBeheer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Inkoop"
    xmlns:localData="using:BarrocIntens.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Inkoop"
                       Foreground="#FDD716"
                       FontSize="40"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="30,0,0,0"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center" Margin="0,0,20,0">
                <Button Content="Terug" Click="Back_Click" Background="Black" Foreground="White" Padding="12,6"/>
                <Button Content="Uitloggen" Click="Logout_Click" Background="#FDD716" Foreground="Black" Padding="12,6"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16" Padding="16" Background="#F3F4F6" CornerRadius="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top button -->
            <Button Grid.Row="0" Content="Leverancier aanmaken" Click="LeverancierAanmaken_Click" Margin="0,0,0,16" Width="200" HorizontalAlignment="Left"/>

            <!-- Columns -->
            <Grid Grid.Row="1" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Leveranciers -->
                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="16" BorderBrush="#D0D0D0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Leveranciers" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
                        <ListView x:Name="LeverancierListView" MaxHeight="400">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="localData:Leverancier">
                                    <Border Background="#F7F7F7" CornerRadius="8" Padding="10" Margin="0,0,0,8" BorderBrush="#E0E0E0" BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock FontWeight="SemiBold" FontSize="14">
                                                <Run Text="Leverancier: "/>
                                                <Run Text="{x:Bind Leveranciernaam}"/>
                                            </TextBlock>

                                            <TextBlock FontSize="12" Foreground="Gray">
                                                <Run Text="Contactpersoon: "/>
                                                <Run Text="{x:Bind Contactpersoon}"/>
                                            </TextBlock>

                                            <TextBlock FontSize="12" Foreground="Gray">
                                                <Run Text="Telefoon: "/>
                                                <Run Text="{x:Bind Telefoonnummer}"/>
                                            </TextBlock>

                                            <TextBlock FontSize="12" Foreground="Gray">
                                                <Run Text="Email: "/>
                                                <Run Text="{x:Bind Email}"/>
                                            </TextBlock>

                                            <TextBlock FontSize="12" Foreground="Gray">
                                                <Run Text="Adres: "/>
                                                <Run Text="{x:Bind Adres}"/>
                                            </TextBlock>
                                        </StackPanel>

                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Goederenontvangst -->
                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="16" BorderBrush="#D0D0D0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Goederenontvangst" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock Text="Registreer ontvangst: aantallen, condities en opmerkingen." FontSize="12" Foreground="Gray" TextWrapping="Wrap"/>
                        <TextBlock x:Name="BestellingMelding" Visibility="Collapsed" Foreground="White" Padding="8" Margin="0,8,0,0" FontWeight="Bold" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Dashboard meldingen -->
                <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="16" BorderBrush="#D0D0D0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Dashboard meldingen" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock Text="Overzicht van openstaande bestellingen en waarschuwingen." FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,8"/>
                        <ListView x:Name="NotificationListView" MaxHeight="400">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="localData:Bestelling">
                                    <Border Background="#f0f0f0" CornerRadius="5" Padding="8" Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock Text="{x:Bind Productname}" FontWeight="Bold"/>
                                            <TextBlock Text="{x:Bind Suppliername}"/>

                                            <TextBlock>
                                                <Run Text="Aantal: "/>
                                                <Run Text="{x:Bind OrderQuantity}"/>
                                            </TextBlock>

                                            <TextBlock>
                                                <Run Text="Status: "/>
                                                <Run Text="{x:Bind Status}"/>
                                            </TextBlock>
                                            <TextBlock>
                                                <Run Text="Verwachte levering: "/>
                                                <Run Text="{x:Bind ExpectedDeliveryDateFormatted}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>

<Page
    x:Class="BarrocIntens.Pages.Inkoop.BestellingAanmaken"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Inkoop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Inkoop"
                       Foreground="#FDD716"
                       FontSize="40"
                       FontFamily="Segoe UI"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                <Button x:Name="Terug"
                        Content="Terug"
                        Click="Back_Click"
                        Background="Black"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Padding="12,6"
                        BorderBrush="White"
                        BorderThickness="1"/>
                <Button x:Name="Logout"
                        Content="Uitloggen"
                        Click="Logout_Click"
                        Background="#FDD716"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="12,6"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Formulier -->
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="OrderFormPanel" Visibility="Visible" Spacing="8" Padding="20" Background="White" Margin="30" CornerRadius="10">

                <TextBlock Text="Product Naam" />

                <!-- ✔️ EVENT TOEGEVOEGD -->
                <ComboBox x:Name="ProductNameComboBox"
                          PlaceholderText="Selecteer een product"
                          SelectionChanged="ProductNameComboBox_SelectionChanged">
                    <ComboBoxItem Content="Barroc Intens Italian Light" />
                    <ComboBoxItem Content="Barroc Intens Italian" />
                    <ComboBoxItem Content="Barroc Intens Italian Deluxe" />
                    <ComboBoxItem Content="Barroc Intens Italian Deluxe Special" />
                </ComboBox>

                <TextBlock Text="Naam van besteller:" />
                <TextBox x:Name="SupplierNameTextBox" PlaceholderText="Enter supplier name" />

                <TextBlock Text="Aantal:" />
                <TextBox x:Name="QuantityTextBox" PlaceholderText="Enter quantity" InputScope="Number" />

                <TextBlock Text="Product prijs:" />
                <TextBox x:Name="UnitPriceTextBox" PlaceholderText="Enter unit price" InputScope="Number" />

                <TextBlock Text="Status" />
                <ComboBox x:Name="StatusComboBox">
                    <ComboBoxItem Content="Aangevraagd"/>
                </ComboBox>

                <TextBlock Text="Verwachte aankomstdatum:" />
                <CalendarDatePicker x:Name="ExpectedDeliveryDatePicker" />

                <Button x:Name="SaveNewOrder"
                        Content="Opslaan"
                        Width="150"
                        Height="40"
                        Background="#FDD716"
                        Foreground="White"
                        FontSize="16"
                        CornerRadius="8"
                        Click="SaveNewOrder_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

<Page
    x:Class="BarrocIntens.Pages.Inkoop.InkoopOverViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Inkoop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <TextBox x:Name="productSearchTextBox"
                     Header="Search:"
                     Width="500"
                     PlaceholderText="Zoeken:" 
                     TextChanged="productSearchTextBox_TextChanged"
                     Background="White"
                     Foreground="Black"/>



            <TextBlock Text="Inkoop "
                    Foreground="#FDD716"
                    FontSize="40"
                    FontFamily="Segoe UI"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                <Button x:Name="Back"
                     Content="Terug"
                     Click="Back_Click"
                     Background="Black"
                     Foreground="White"
                     FontSize="16"
                     FontWeight="SemiBold"
                     Padding="12,6"
                     BorderBrush="White"
                     BorderThickness="1"/>

                <Button x:Name="Logout"
                     Content="Uitloggen"
                     Click="Logout_Click"
                     Background="#FDD716"
                     Foreground="Black"
                     FontSize="16"
                     FontWeight="Bold"
                     Padding="12,6"
                     BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Product Overzicht -->
        <Border Grid.Row="1" Margin="30" Background="White" CornerRadius="10" Padding="20" 
        BorderBrush="#DDD" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Beschikbare producten" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

                <ListView x:Name="ProductListView" Margin="0,10,0,0" ItemsSource="{Binding Products}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!-- ItemsWrapGrid zorgt voor een raster -->
                            <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" Background="White" Width="200">
                                <StackPanel>
                                    <TextBlock Text="{Binding Productname}" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                                    <TextBlock Text="Prijs: {Binding Price} cent" Margin="0,0,0,5"/>
                                    <TextBlock Text="Voorraad: {Binding Stock}" Margin="0,0,0,5"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</Page>

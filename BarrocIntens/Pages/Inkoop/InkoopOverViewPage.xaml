<Page
 x:Class="BarrocIntens.Pages.Inkoop.InkoopOverViewPage"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:local="using:BarrocIntens.Pages.Inkoop"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:localdata="using:BarrocIntens.Models"
 mc:Ignorable="d">

   
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Inkoop"
                   Foreground="#FDD716"
                   FontSize="40"
                   FontFamily="Segoe UI"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                <Button x:Name="Back"
                    Content="Terug"
                    Click="Back_Click"
                    Background="Black"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Padding="12,6"
                    BorderBrush="White"
                    BorderThickness="1"/>
                <Button x:Name="Logout"
                    Content="Uitloggen"
                    Click="Logout_Click"
                    Background="#FDD716"
                    Foreground="Black"
                    FontSize="16"
                    FontWeight="Bold"
                    Padding="12,6"
                    BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Border Grid.Row="1" Margin="30" Background="White" CornerRadius="10" Padding="20"
            BorderBrush="#DDD" BorderThickness="1">
            <ScrollViewer>
                <StackPanel Spacing="20">

                    <!-- Search -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="15" VerticalAlignment="Center">
                        <TextBlock Text="Search:" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
                        <TextBox x:Name="productSearchTextBox"
                             Width="400"
                             Height="36"
                             PlaceholderText="Zoeken..."
                             Background="White"
                             Foreground="Black"
                             BorderBrush="#CCC"
                             BorderThickness="1"
                             CornerRadius="6"
                             Padding="8"/>
                        <Button x:Name="CreateOrder"
                            Content="Nieuwe Bestelling"
                            Width="160"
                            Height="42"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="15"
                            CornerRadius="8"
                            Click="CreateOrder_Click"/>
                    </StackPanel>
                    <ListView x:Name="BestellingenListView"
          HorizontalContentAlignment="Stretch"
          Height="320">

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="localdata:Bestelling">

                                <Border BorderBrush="#CCC"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="15"
                    Margin="8"
                    Background="#FAFAFA">

                                    <StackPanel Spacing="10">

                                        <!-- Titel -->
                                        <TextBlock FontWeight="Bold"
                               FontSize="18"
                               Foreground="#222">
                        <Run Text="Order #" />
                        <Run Text="{x:Bind Id}" />
                                        </TextBlock>

                                        <!-- Info in nette tabel vorm -->
                                        <Grid ColumnSpacing="10" RowSpacing="4">

                                            <!-- 2 kolommen -->
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="160"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 9 rijen -->
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Row 0 -->
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Date:" Foreground="#555"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind OrderDate}"/>

                                            <!-- Row 1 -->
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Product:" Foreground="#555"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind Productname}"/>

                                            <!-- Row 2 -->
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Supplier:" Foreground="#555"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Bind Suppliername}"/>

                                            <!-- Row 3 -->
                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Quantity:" Foreground="#555"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{x:Bind OrderQuantity}"/>

                                            <!-- Row 4 -->
                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Expected Delivery:" Foreground="#555"/>
                                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{x:Bind ExpectedDeliveryDate}"/>

                                            <!-- Row 5 -->
                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Unit Price:" Foreground="#555"/>
                                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{x:Bind UnitPrice}"/>

                                            <!-- Row 6 -->
                                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Total Price:" Foreground="#555"/>
                                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{x:Bind TotalPrice}"/>

                                            <!-- Row 7 -->
                                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Status:" Foreground="#555"/>
                                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{x:Bind Status}"/>

                                            <!-- Row 8 -->
                                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Notes:" Foreground="#555"/>
                                            <TextBlock Grid.Row="8" Grid.Column="1"
                                   Text="{x:Bind Remark}"
                                   TextWrapping="Wrap"/>
                                        </Grid>

                                    </StackPanel>
                                </Border>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>


                    <!-- Producten Sectie -->
                    <StackPanel Spacing="15">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button x:Name="ShowProductsButton"
                                Content="Leverbare producten"
                                Width="160"
                                Height="40"
                                Background="#2196F3"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Click="ShowProducts_Click"/>
                            <Button x:Name="LeverancierBeheer"
                                 Content="Leverancierbeheer"
                                 Width="160"
                                 Height="40"
                                 Background="#2196F3"
                                 Foreground="White"
                                 FontWeight="SemiBold"
                                 Click="LeverancierBeheer_Click"/>
                            <Button x:Name="HideProductsButton"
                                Content="Verberg producten"
                                Width="160"
                                Height="40"
                                Background="#F44336"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Visibility="Collapsed"
                                Click="HideProductsButton_Click"/>
                        </StackPanel>
                        

                        <ListView x:Name="ProductListView" Visibility="Collapsed">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="4" HorizontalAlignment="Stretch"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="localdata:Product">
                                    <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="10" Padding="15" Margin="10" Background="White" Width="260">
                                        <StackPanel Spacing="6">
                                            <TextBlock Text="{x:Bind Productname}" FontWeight="Bold" FontSize="15" Foreground="#333"/>
                                            <TextBlock><Run Text="Prijs: €" /><Run Text="{x:Bind Price}" /></TextBlock>
                                            <TextBlock><Run Text="Voorraad: " /><Run Text="{x:Bind Stock}" /></TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
   

</Page>

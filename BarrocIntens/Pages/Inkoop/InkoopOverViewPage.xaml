<Page
    x:Class="BarrocIntens.Pages.Inkoop.InkoopOverViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Inkoop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!-- Header -->
        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <TextBlock Text="Search:" Margin="300,0,0,0"/>
            <TextBox x:Name="productSearchTextBox"
                      Width="500"
                      Height="35"
                      PlaceholderText="Zoeken:"
                      Background="White"
                      Foreground="Black"
                      Margin="300,0,0,0"/>              





                <TextBlock Text="Inkoop "
                    Foreground="#FDD716"
                    FontSize="40"
                    FontFamily="Segoe UI"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                <Button x:Name="Back"
                     Content="Terug"
                     Click="Back_Click"
                     Background="Black"
                     Foreground="White"
                     FontSize="16"
                     FontWeight="SemiBold"
                     Padding="12,6"
                     BorderBrush="White"
                     BorderThickness="1"/>

                <Button x:Name="Logout"
                     Content="Uitloggen"
                     Click="Logout_Click"
                     Background="#FDD716"
                     Foreground="Black"
                     FontSize="16"
                     FontWeight="Bold"
                     Padding="12,6"
                     BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Product Overzicht -->
        <Border Grid.Row="1" Margin="30" Background="White" CornerRadius="10" Padding="20" 
        BorderBrush="#DDD" BorderThickness="1">
            <StackPanel Margin="40,20,40,20">

    <TextBlock Text="Beschikbare producten"
               FontSize="28"
               FontWeight="Bold"
               Margin="0,0,0,20"/>

    <ListView x:Name="ProductListView"
              ItemsSource="{Binding Products}"
              HorizontalContentAlignment="Stretch"
              Margin="0,0,0,0">

        <!-- Raster -->
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <ItemsWrapGrid Orientation="Horizontal"
                               MaximumRowsOrColumns="4"
                               HorizontalAlignment="Stretch" />
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>

        <!-- Kaart template -->
        <ListView.ItemTemplate>
            <DataTemplate>
                <Border BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="10"
                        Background="White"
                        Width="260">

                <StackPanel>
                    <TextBlock Text="{Binding Productname}"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,4" />

                <TextBlock>
                    <Run Text="Prijs: €" />
                    <Run Text="{Binding Price}" /> 
                </TextBlock>

                <TextBlock>
                    <Run Text="Voorraad: " />
                    <Run Text="{Binding Stock}" />  
                </TextBlock>
                </StackPanel>


                            </Border>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</StackPanel>

        </Border>
    </Grid>
</Page>

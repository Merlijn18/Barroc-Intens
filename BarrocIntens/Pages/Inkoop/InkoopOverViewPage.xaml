<Page
 x:Class="BarrocIntens.Pages.Inkoop.InkoopOverViewPage"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:local="using:BarrocIntens.Pages.Inkoop"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:localdata="using:BarrocIntens.Models"
 mc:Ignorable="d">

   
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Inkoop"
                   Foreground="#FDD716"
                   FontSize="40"
                   FontFamily="Segoe UI"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                <Button x:Name="Back"
                    Content="Terug"
                    Click="Back_Click"
                    Background="Black"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Padding="12,6"
                    BorderBrush="White"
                    BorderThickness="1"/>
                <Button x:Name="Logout"
                    Content="Uitloggen"
                    Click="Logout_Click"
                    Background="#FDD716"
                    Foreground="Black"
                    FontSize="16"
                    FontWeight="Bold"
                    Padding="12,6"
                    BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Border Grid.Row="1" Margin="30" Background="White" CornerRadius="10" Padding="20"
            BorderBrush="#DDD" BorderThickness="1">
            <ScrollViewer>
                <StackPanel Spacing="20">

                    <!-- Search -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="15" VerticalAlignment="Center">
                        <TextBlock Text="Search:" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
                        <TextBox x:Name="productSearchTextBox"
                             Width="400"
                             Height="36"
                             PlaceholderText="Zoeken..."
                             Background="White"
                             Foreground="Black"
                             BorderBrush="#CCC"
                             BorderThickness="1"
                             CornerRadius="6"
                             Padding="8"/>
                        <Button x:Name="CreateOrder"
                            Content="Nieuwe Bestelling"
                            Width="160"
                            Height="42"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="15"
                            CornerRadius="8"
                            Click="CreateOrder_Click"/>
                    </StackPanel>

                    <!-- Bestellingen Titel -->
                    <TextBlock Text="Bestellingen Overzicht" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Bestellingen Lijst -->
                    <ListView x:Name="BestellingenListView"
                          HorizontalContentAlignment="Stretch"
                          Height="320">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="localdata:Bestelling">
                                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="10" Padding="15" Margin="5" Background="#FAFAFA">
                                    <StackPanel Spacing="5">
                                        <TextBlock FontWeight="Bold" FontSize="16" Foreground="#333">
                                        <Run Text="Order #" /><Run Text="{x:Bind OrderId}" />
                                        </TextBlock>
                                        <StackPanel Spacing="2">
                                            <TextBlock><Run Text="Date: " /><Run Text="{x:Bind OrderDate}" /></TextBlock>
                                            <TextBlock><Run Text="Product: " /><Run Text="{x:Bind Productname}" /></TextBlock>
                                            <TextBlock><Run Text="Supplier: " /><Run Text="{x:Bind Suppliername}" /></TextBlock>
                                            <TextBlock><Run Text="Quantity: " /><Run Text="{x:Bind OrderQuantity}" /></TextBlock>
                                            <TextBlock><Run Text="Expected Delivery: " /><Run Text="{x:Bind ExpectedDeliveryDate}" /></TextBlock>
                                            <TextBlock><Run Text="Unit Price: " /><Run Text="{x:Bind UnitPrice}" /></TextBlock>
                                            <TextBlock><Run Text="Total Price: " /><Run Text="{x:Bind TotalPrice}" /></TextBlock>
                                            <TextBlock><Run Text="Status: " /><Run Text="{x:Bind Status}" /></TextBlock>
                                            <TextBlock><Run Text="Notes: " /><Run Text="{x:Bind Remark}" /></TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Producten Sectie -->
                    <StackPanel Spacing="15">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button x:Name="ShowProductsButton"
                                Content="Toon producten"
                                Width="160"
                                Height="40"
                                Background="#2196F3"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Click="ShowProducts_Click"/>
                            <Button x:Name="HideProductsButton"
                                Content="Verberg producten"
                                Width="160"
                                Height="40"
                                Background="#F44336"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Visibility="Collapsed"
                                Click="HideProductsButton_Click"/>
                        </StackPanel>

                        <ListView x:Name="ProductListView" Visibility="Collapsed">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="4" HorizontalAlignment="Stretch"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="localdata:Product">
                                    <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="10" Padding="15" Margin="10" Background="White" Width="260">
                                        <StackPanel Spacing="6">
                                            <TextBlock Text="{x:Bind Productname}" FontWeight="Bold" FontSize="15" Foreground="#333"/>
                                            <TextBlock><Run Text="Prijs: €" /><Run Text="{x:Bind Price}" /></TextBlock>
                                            <TextBlock><Run Text="Voorraad: " /><Run Text="{x:Bind Stock}" /></TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
   

</Page>

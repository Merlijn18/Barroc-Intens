<Page
    x:Class="BarrocIntens.Pages.Inkoop.InkoopOverViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Inkoop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:localdata="using:BarrocIntens.Models"
    mc:Ignorable="d">

    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Search:" Margin="300,0,0,0"/>
            <TextBox x:Name="productSearchTextBox"
                      Width="500"
                      Height="35"
                      PlaceholderText="Zoeken:"
                      Background="White"
                      Foreground="Black"
                      Margin="300,0,0,0"/>

            <TextBlock Text="Inkoop "
                       Foreground="#FDD716"
                       FontSize="40"
                       FontFamily="Segoe UI"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                <Button x:Name="Back"
                     Content="Terug"
                     Click="Back_Click"
                     Background="Black"
                     Foreground="White"
                     FontSize="16"
                     FontWeight="SemiBold"
                     Padding="12,6"
                     BorderBrush="White"
                     BorderThickness="1"/>

                <Button x:Name="Logout"
                     Content="Uitloggen"
                     Click="Logout_Click"
                     Background="#FDD716"
                     Foreground="Black"
                     FontSize="16"
                     FontWeight="Bold"
                     Padding="12,6"
                     BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Main content -->
        
            <Border Grid.Row="1" Margin="30" Background="White" CornerRadius="10" Padding="20" 
                BorderBrush="#DDD" BorderThickness="1">
            <ScrollView>
                <StackPanel Margin="40,20,40,20">
                
                    <TextBlock Text="Bestellingen"
                           FontSize="28"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <!-- Toon producten knop -->
                <Button x:Name="ShowProductsButton"
                        Content="Toon producten"
                        Width="150"
                        Height="40"
                        Margin="0,0,0,20"
                        Click="ShowProducts_Click"/>

                <!-- Bestellingen overzicht -->
                <TextBlock Text="Bestellingen Overzicht"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,10,0,10"/>

                <ListView x:Name="BestellingenListView"
                          HorizontalContentAlignment="Stretch"
                          Height="200">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="localdata:Bestelling">
                            <Border BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="5"
                                    Background="#FAFAFA">
                                <StackPanel Padding="10" Background="White" Margin="5" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
                                    <TextBlock FontWeight="Bold" FontSize="16">
                                        <Run Text="Bestelling #"/>
                                        <Run Text="{x:Bind Ordernumber}"/>
                                                                    </TextBlock>

                                                                    <TextBlock Margin="0,4,0,0">
                                        <Run Text="Datum: "/>
                                        <Run Text="{x:Bind Date_Of_Order}"/>
                                                                    </TextBlock>

                                                                    <TextBlock Margin="0,2,0,0">
                                        <Run Text="Klant: "/>
                                        <Run Text="{x:Bind Customername}"/>
                                                                    </TextBlock>

                                                                    <TextBlock Margin="0,2,0,0">
                                        <Run Text="Email: "/>
                                        <Run Text="{x:Bind Customer_Email}"/>
                                                                    </TextBlock>

                                                                    <TextBlock Margin="0,2,0,0">
                                        <Run Text="Telefoon: "/>
                                        <Run Text="{x:Bind Customer_Phonenumber}"/>
                                                                    </TextBlock>

                                                                    <TextBlock Margin="0,2,0,0">
                                        <Run Text="Status: "/>
                                        <Run Text="{x:Bind Order_Status}"/>     
                                    </TextBlock>
                                </StackPanel>


                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Producten overzicht -->
                <ListView x:Name="ProductListView"
                          HorizontalContentAlignment="Stretch"
                          Visibility="Collapsed">

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal"
                                           MaximumRowsOrColumns="4"
                                           HorizontalAlignment="Stretch" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="localdata:Product">
                            <Border BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="10"
                                    Background="White"
                                    Width="260">
                                <StackPanel>
                                    <TextBlock Text="{x:Bind Productname}"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Margin="0,0,0,4" />
                                    <TextBlock>
                                        <Run Text="Prijs: €" />
                                        <Run Text="{x:Bind Price}" />
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="Voorraad: " />
                                        <Run Text="{x:Bind Stock}" />
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Verberg producten knop -->
                <Button x:Name="HideProductsButton"
                        Content="Verberg producten"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,0"
                        Visibility="Collapsed"
                        Click="HideProductsButton_Click"/>
            
            </StackPanel>
            </ScrollView>
        </Border>
        
    </Grid>
</Page>

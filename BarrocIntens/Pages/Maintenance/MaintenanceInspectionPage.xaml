<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Maintenance.MaintenanceInspectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Maintenance"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Keuring"
              Foreground="#FDD716"
              FontSize="40"
              FontFamily="Segoe UI"
              FontWeight="Bold"
              VerticalAlignment="Center"
              Margin="30,0,0,0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                <Button x:Name="Back"
               Content="Terug"
               Click="Back_Click"
               Background="Black"
               Foreground="White"
               FontSize="16"
               FontWeight="SemiBold"
               Padding="12,6"
               BorderBrush="White"
               BorderThickness="1"/>

                <Button x:Name="Logout"
               Content="Uitloggen"
               Click="Logout_Click"
               Background="#FDD716"
               Foreground="Black"
               FontSize="16"
               FontWeight="Bold"
               Padding="12,6"
               BorderThickness="0"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Background="#FFFDFDFD">
            <ScrollViewer Padding="20">
                <StackPanel Spacing="15">

                    <TextBlock Text="Keuring Formulier" FontSize="28" FontWeight="SemiBold"/>

                    <CheckBox x:Name="ChecklistUitgevoerd" Content="Checklist volledig uitgevoerd" />
                    <CheckBox x:Name="Goedgekeurd" Content="Goedgekeurd"/>

                    <TextBox x:Name="Opmerkingen" Header="Opmerkingen" AcceptsReturn="True" Height="100"/>

                    <TextBlock Text="Gebruikte spullen:" FontWeight="Bold"/>
                    <ListView x:Name="GebruikteOnderdelenList" Height="120"/>

                    <Button Content="Opslaan" Click="Button_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

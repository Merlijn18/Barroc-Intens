<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Maintenance.MaintenanceBackLog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Maintenance"
    xmlns:localData="using:BarrocIntens.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Black" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="BackLog"
                       Foreground="#FDD716"
                       FontSize="40"
                       FontFamily="Segoe UI"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="30,0,0,0" />

            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Spacing="10">
                <Button x:Name="Back"
                        Content="Terug"
                        Click="Back_Click"
                        Background="Black"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Padding="12,6"
                        BorderBrush="White"
                        BorderThickness="1" />

                <Button x:Name="Logout"
                        Content="Uitloggen"
                        Click="Logout_Click"
                        Background="#FDD716"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="12,6"
                        BorderThickness="0" />
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" Padding="30">

            <TextBox x:Name="SearchBox"
                    PlaceholderText="Zoeken..."
                    TextChanged="SearchBox_TextChanged"
                    Margin="0,0,0,20" />

            <ListView x:Name="MaintenaceListview"
                     Padding="10"
                     BorderThickness="0">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="localData:Maintance">

                        <Border Background="White"
                               CornerRadius="12"
                               BorderBrush="#CCC"
                               BorderThickness="1"
                               Padding="20"
                               Margin="0,12,0,0">

                            <Grid ColumnSpacing="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>


                                <!-- INFO -->
                                <StackPanel Grid.Column="1">

                                    <TextBlock Text="{x:Bind Id}"
                                          FontSize="22"
                                          FontWeight="Bold"/>

                                    <TextBlock Text="{x:Bind Titel }"
                                          Foreground="Gray"
                                          Margin="0,4,0,0"/>

                                    <TextBlock Text="{x:Bind Type }"
                                          Margin="0,4,0,0"/>

                                    <TextBlock Text="{x:Bind ExtraInfo }"
                                          Margin="0,4,0,0"/>

                                    <TextBlock Text="{x:Bind Status }"
                                           Foreground="#FDD716"
                                           Margin="0,8,0,0"/>

                                </StackPanel>

                                <!-- BUTTON -->
                                <Button Grid.Column="2"
                               Content="Details"
                               Click="Details_Click"/>
                            </Grid>


                        </Border>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </Grid>
</Page>

<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Maintenance.MachinesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:localData="using:BarrocIntens.Models">

    <Page.Resources>

        <SolidColorBrush x:Key="BI_Yellow" Color="#FDD716" />
        <SolidColorBrush x:Key="BI_Dark" Color="#222" />

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <Style x:Key="YellowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FDD716"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

    </Page.Resources>


    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!-- HEADER -->
        <Grid Grid.Row="0"
              Background="Black"
              Height="90"
              Padding="40,0,40,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Machines"
                       Foreground="#FDD716"
                       FontSize="36"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="12">
                <Button Content="Terug"
                        Click="Back_Click"
                        Style="{StaticResource OutlineButtonStyle}"/>

                <Button Content="Uitloggen"
                        Click="Logout_Click"
                        Style="{StaticResource YellowButtonStyle}"/>
            </StackPanel>
        </Grid>



        <!-- CONTENT -->
        <StackPanel Grid.Row="1" Padding="30">

            <TextBox x:Name="SearchBox"
                     PlaceholderText="Zoeken..."
                     TextChanged="SearchBox_TextChanged"
                     Margin="0,0,0,20" />

            <ListView x:Name="MachinesList"
                      Padding="10"
                      BorderThickness="0">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="localData:Machine">

                        <Border Background="White"
                                CornerRadius="12"
                                BorderBrush="#CCC"
                                BorderThickness="1"
                                Padding="20"
                                Margin="0,12,0,0">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>

                                    <TextBlock Text="{x:Bind Name}"
                                               FontSize="22"
                                               FontWeight="Bold"/>

                                    <TextBlock Text="{x:Bind SerialNumber}"
                                               Foreground="Gray"
                                               Margin="0,4,0,0"/>

                                    <TextBlock Text="{x:Bind Location}"
                                               Margin="0,4,0,0"/>

                                    <TextBlock Text="{x:Bind LastMaintenance}"
                                               Foreground="#FDD716"
                                               Margin="0,8,0,0"/>

                                </StackPanel>

                                <Button Grid.Column="1"
                                        Content="Details"
                                        Style="{StaticResource YellowButtonStyle}"
                                        Click="Detail_Click"/>
                            </Grid>

                        </Border>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>

    </Grid>
</Page>

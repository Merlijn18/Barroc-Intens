<Page
    x:Class="BarrocIntens.Pages.Maintenance.MaintenanceOverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.Resources>

        <!-- kleuren -->
        <SolidColorBrush x:Key="BI_Yellow" Color="#FDD716" />
        <SolidColorBrush x:Key="BI_Dark" Color="#222" />
        <SolidColorBrush x:Key="BI_DarkBorder" Color="#FDD716" />

        <!-- TILE BUTTON -->
        <Style x:Key="TileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BI_Dark}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="BorderBrush" Value="{StaticResource BI_DarkBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- YELLOW BUTTON -->
        <Style x:Key="YellowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FDD716"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- WHITE OUTLINE -->
        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

    </Page.Resources>

    <Grid Background="Black">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0"
              Background="Black"
              Height="90"
              Padding="40,0,40,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Maintenance"
                       Foreground="#FDD716"
                       FontSize="36"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="12">

                <Button Content="Terug"
                        Click="Back_Click"
                        Style="{StaticResource OutlineButtonStyle}"/>

                <Button Content="Uitloggen"
                        Click="Logout_Click"
                        Style="{StaticResource YellowButtonStyle}"/>
            </StackPanel>
        </Grid>


        <!-- TILES -->
        <Grid Grid.Row="1" Margin="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="0"
                    Content="Kalender"
                    Click="Calendar_Click"
                    Style="{StaticResource TileButtonStyle}"/>

            <Button Grid.Row="0" Grid.Column="1"
                    Content="Machines"
                    Click="Machines_Click"
                    Style="{StaticResource TileButtonStyle}"/>

            <Button Grid.Row="1" Grid.Column="0"
                    Content="Storingen"
                    Click="Reports_Click"
                    Style="{StaticResource TileButtonStyle}"/>

            <Button Grid.Row="1" Grid.Column="1"
                    Content="Keuring plannen"
                    Click="Inspection_Click"
                    Style="{StaticResource TileButtonStyle}"/>

        </Grid>

    </Grid>
</Page>